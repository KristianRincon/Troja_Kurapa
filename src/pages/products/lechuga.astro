</div>

      <!-- Flechas de Navegación -->
      <button
        id="prev"
        class="absolute top-1/2 -left-4 md:-left-8 transform -translate-y-1/2 bg-white bg-opacity-75 p-2 rounded-full shadow-md hover:bg-opacity-100 hover:bg-green-100 hover:shadow-lg transition-all duration-300"
      >
        <svg
          class="w-6 h-6 text-green-600 hover:text-green-700 transition-colors duration-300"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"
          ></path>
        </svg>
      </button>
      <button
        id="next"
        class="absolute top-1/2 -right-4 md:-right-8 transform -translate-y-1/2 bg-white bg-opacity-75 p-2 rounded-full shadow-md hover:bg-opacity-100 hover:bg-green-100 hover:shadow-lg transition-all duration-300"
      >
        <svg
          class="w-6 h-6 text-green-600 hover:text-green-700 transition-colors duration-300"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          ></path>
        </svg>
      </button>
    </div>
  </div>
</section>

<!-- Script para el Carrusel -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const carruselItems = document.querySelectorAll('.carrusel-item');
    const prevButton = document.getElementById('prev');
    const nextButton = document.getElementById('next');
    let currentIndex = 0;

    // Función para mostrar el ítem actual
    const showItem = (index: number) => {
      carruselItems.forEach((item, i) => {
        item.classList.toggle('opacity-0', i !== index);
        item.classList.toggle('opacity-100', i === index);
      });
    };

    // Mostrar el primer ítem al cargar la página
    showItem(currentIndex);

    // Navegar al ítem anterior
    if (prevButton) {
      prevButton.addEventListener('click', () => {
      currentIndex = (currentIndex > 0) ? currentIndex - 1 : carruselItems.length - 1;
      showItem(currentIndex);
    });

    if (nextButton) {
      nextButton.addEventListener('click', () => {
        currentIndex = (currentIndex < carruselItems.length - 1) ? currentIndex + 1 : 0;
        showItem(currentIndex);
      });
    }

    // Paso automático cada 10 segundos
    setInterval(() => {
      currentIndex = (currentIndex < carruselItems.length - 1) ? currentIndex + 1 : 0;
      showItem(currentIndex);
    }, 10000);
  };
});
</script>

  <!-- Sección 4: Beneficios -->
  <section class="py-12 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-green-600 mb-6">Beneficios y Usos</h2>
      <p class="text-lg text-gray-700">
        Ideal para ensaladas frescas, wraps saludables o como guarnición. La lechuga es un alimento bajo en calorías y rico en nutrientes.
      </p>
    </div>
  </section>
</Layout>
