    <div class="flex flex-col md:flex-row items-center gap-8 p-4 h-full">
      <img src="/images/siembra.webp" alt="Siembra" class="w-full md:w-1/2 h-64 object-cover rounded-lg shadow-lg">
      <div class="w-full md:w-1/2 flex-1">
